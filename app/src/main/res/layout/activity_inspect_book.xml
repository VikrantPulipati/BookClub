<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".browsebooks.InspectBook">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/id_inspectBook_readIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_menuButton"
                app:srcCompat="@drawable/read_icon_new"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/id_inspectBook_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="308dp"
                android:text="Category: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/id_inspectBook_timestamp"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_timestamp" />

            <ImageButton
                android:id="@+id/id_inspectBook_menuButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/book_list_menu_icon"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/id_inspectBook_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Title"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_coverImage"
                app:layout_constraintVertical_bias="0.079" />

            <TextView
                android:id="@+id/id_inspectBook_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Read On: "
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_series"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/id_inspectBook_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Series: Book "
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_author"
                app:layout_constraintVertical_bias="0.02" />

            <TextView
                android:id="@+id/id_inspectBook_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_title"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/id_inspectBook_coverImage"
                android:layout_width="265dp"
                android:layout_height="350dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.082"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/id_inspectBook_intensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Intensity: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/id_inspectBook_category"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_category" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Localized Titles"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_submitIntensity" />

            <TextView
                android:id="@+id/id_inspectBook_french"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French: "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.11"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/id_inspectBook_german"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="German: "
                app:layout_constraintStart_toStartOf="@+id/id_inspectBook_french"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_french" />

            <TextView
                android:id="@+id/id_inspectBook_polish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Polish: "
                app:layout_constraintStart_toStartOf="@+id/id_inspectBook_german"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_german" />

            <TextView
                android:id="@+id/id_inspectBook_russian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Russian: "
                app:layout_constraintStart_toStartOf="@+id/id_inspectBook_polish"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_polish" />

            <TextView
                android:id="@+id/id_inspectBook_spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Spanish: "
                app:layout_constraintStart_toStartOf="@+id/id_inspectBook_russian"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_russian" />

            <Button
                android:id="@+id/id_inspectBook_submitLocalization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Submit Localized Title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_spanish" />

            <Button
                android:id="@+id/id_inspectBook_submitIntensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Submit Intensity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_inspectBook_intensity" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>